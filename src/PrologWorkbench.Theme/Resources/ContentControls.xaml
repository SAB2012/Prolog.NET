<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PrologWorkbench.Theme;component/Resources/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ContentControl.Standard" TargetType="{x:Type ContentControl}">
        <Setter Property="Background" Value="{StaticResource Brush.ContentControl.Background}" />
    </Style>

    <Style TargetType="{x:Type ContentControl}" BasedOn="{StaticResource ContentControl.Standard}" />
    
</ResourceDictionary>