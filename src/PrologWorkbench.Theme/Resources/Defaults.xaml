<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <CornerRadius x:Key="MainCorner">15</CornerRadius>
  <CornerRadius x:Key="ModuleCorner">0,0,15,15</CornerRadius>

  <!-- Global: Font -->
  <Style x:Key="Control.Base" TargetType="{x:Type Control}">
    <!-- Setter Property="FontFamily" Value="Segoe UI" / -->
    <Setter Property="FontFamily" Value="Segoe UI" />
  </Style>
  
  <Style BasedOn="{StaticResource Control.Base}" TargetType="{x:Type Control}">
    <!-- Setter Property="FontFamily" Value="Segoe UI" / -->
    <Setter Property="FontFamily" Value="SketchFlow Print" />
  </Style>
  
<Style TargetType="{x:Type GridSplitter}">
  <Setter Property="Width" Value="3" />
  <Setter Property="Background" Value="Transparent" />	
</Style>

</ResourceDictionary>