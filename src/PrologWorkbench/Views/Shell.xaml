<Window x:Class="Prolog.Workbench.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:Prolog.Workbench.ViewModels" 
        xmlns:regions="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
        xmlns:Behaviors="clr-namespace:Prolog.Workbench.Behaviors" 
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="400"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        WindowStyle="None"
        >
    <!--Style="{DynamicResource Window.Standard}"-->

    <Window.DataContext>
        <ViewModels:ShellViewModel />
    </Window.DataContext>
    
    <i:Interaction.Behaviors>
        <Behaviors:ControlWindowBehavior />
    </i:Interaction.Behaviors>
    
    <DockPanel Style="{DynamicResource Style.Shell.DockPanel}" LastChildFill="true" >

        <ContentControl DockPanel.Dock="Bottom" regions:RegionManager.RegionName="StatusBarRegion" />
        
        <ContentControl DockPanel.Dock="Top" regions:RegionManager.RegionName="TitleBarRegion" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ContentControl Grid.RowSpan="2" regions:RegionManager.RegionName="ProgramRegion" />
            <GridSplitter Grid.RowSpan="2" Width="3" Background="{DynamicResource Brush.Brown}"  />
            <ContentControl Grid.Column="1" Grid.Row="0" regions:RegionManager.RegionName="TranscriptRegion" />
            <GridSplitter ResizeDirection="Rows" Grid.Column="1" Grid.Row="1" Width="Auto" Height="3" 
                HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                Background="{DynamicResource Brush.Brown}" />
            <ContentControl Grid.Column="1" Grid.Row="1" regions:RegionManager.RegionName="CommandRegion" />
        </Grid>
        
        <!-- TabControl>
            <TabItem Header="Transcript">
                <local:TranscriptComponent x:Name="ctrlTranscript" />
            </TabItem>
            <TabItem Header="Trace">
                <local:TraceComponent x:Name="ctrlTrace" />
            </TabItem>
            <TabItem Header="Program">
                <local:ProgramExplorerComponent x:Name="ctrlProgram" />
            </TabItem>
            <TabItem Header="Debug">
                <local:DebugComponent x:Name="ctrlDebug" />
            </TabItem>
        </TabControl-->
    </DockPanel>
    
</Window>
